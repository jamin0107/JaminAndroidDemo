<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/activity_filter_iamgeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/filter_panel"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_login_window" />



    <fragment
        android:id="@+id/filter_panel"
        android:name="com.jamin.android.demo.ui.image.filter.FilterPanelFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>