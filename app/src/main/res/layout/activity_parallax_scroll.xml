<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_parallax_expand_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffff00" />

    <Button
        android:id="@+id/activity_parallax_btn_below_parallax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="bottom bar" />

    <com.jamin.android.demo.widget.ParallaxScrollListView
        android:id="@+id/activity_parallax_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_parallax_btn_below_parallax"
        android:background="#ffffff" />


</RelativeLayout>